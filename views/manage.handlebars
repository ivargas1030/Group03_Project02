<form style="margin-left: 50px; margin-top:20px; margin-right: 50px">
  <div class="form-group">
    <label>Add New Category</label>
    <input type="text" id="newCategory" class="form-control" placeholder="New Catagory">
  </div>
  <button type="submit" class="btn btn-primary my-1" id="saveCatButton">Save</button>  
  <br><br>
  <div class="form-group">
    <label>Edit Category Name</label>
    <select id="editCategory" class="form-control">
      <option class="listHolder">Edit Categories</option>
    </select>
     <br>
    <input type="text" id="editCategoryText" class="form-control" placeholder="Edit Catagory Name">
  </div>
  <button type="submit" class="btn btn-primary my-1" id="editCatButton">Edit</button>
    <br><br>
  <div class="form-group">
    <label>Delete Category and Associated Links</label>
    <select id="deleteCategory" class="form-control">
      <option class="listHolder">Delete Categories</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary my-1" id="deleteCatButton">Delete</button>
</form>